<div class="container">
	<div class="row">
		<% if @events.empty? %>
			<div class="col s12">
				<br>
				<br>
				<h4 class="center-align">No Events</h4>
			</div>
		<% else %>
			<% @events.each do |event| %>
				<div class="col s12 m6 l4">
					<div class="card medium">
				    <div class="card-image waves-effect waves-block waves-light">
				      <!-- <img class="activator" src="http://materializecss.com/images/office.jpg"> -->
				      <img class="activator" src="<%= (event.restaurant.image_url).sub('/ms', '/348s') %>">
				      <!-- <div class="card-title">3:00 pm</div> -->
				    </div>
				    <div class="card-content">
				      <span class="card-title activator grey-text text-darken-4">
				      	<%= truncate(event.restaurant.name, :length => 20)%>
				      	<i class="material-icons right">more_vert</i>
				      </span>
				      <div class="rating-image">
	              <img src="<%= event.restaurant.rating_img_url %>">
	              <p class="rating-view"><%= event.restaurant.review_count %> reviews</p>
	            </div> 
	            <p>Meet @ <%= event.time %></p>
				      <p><a href="#">JOIN</a></p>
				    </div>
				    <div class="card-reveal">
				      <span class="card-title grey-text text-darken-4">
				      	<%= event.restaurant.name %>
				      	<i class="material-icons right">close</i>
				      </span>
				      <p><%= event.restaurant.address.html_safe %></p>
				      <hr>
				      <div class="row valign-wrapper">
		            <div class="col s2">
		              <img src="http://materializecss.com/images/yuna.jpg" alt="" class="circle responsive-img"> <!-- notice the "circle" class -->
		            </div>
		            <div class="col s10">
		              <span class="black-text">
		                <%= event.message %>
		              </span>
		            </div>
		          </div>
				    </div>
				  </div>
				</div>
			<% end %>
		<% end %>
	</div>
	<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
		<%= link_to restaurants_path, :class => "btn-floating btn-large red" do %>
			<i class="material-icons">add</i>
		<% end %>
  </div>
</div>