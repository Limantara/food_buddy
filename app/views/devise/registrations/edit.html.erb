<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="section-signup">
  <div class="row">
    <div class= "col s12 m8 l6 offset-l3 offset-m2">
      <h5>Edit User</h5>
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12 l6">
            <%= f.text_field :firstname%>
            <%= f.label :firstname, 'First Name' %>
          </div>
          <div class="input-field col s12 l6">
            <%= f.text_field :lastname %>
            <%= f.label :lastname, 'Last Name' %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :email %>
            <%= f.label :email, 'Email' %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.password_field :password %>
            <%= f.label :password, 'New Password' %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.password_field :password %>
            <%= f.label :password, 'Confirm New Password' %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= button_tag( :class => "btn waves-effect waves-light") do %>
              Update<i class="material-icons right">send</i>
            <% end %>

            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,  class: "btn waves-effect waves-light"%>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<% end %>




